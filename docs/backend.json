
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Perfil profissional do desenvolvedor.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "bio": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "skills": { "type": "array", "items": { "type": "string" } },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "linkedin": { "type": "string" },
            "website": { "type": "string" }
          }
        }
      },
      "required": ["id", "name", "bio"]
    },
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "description": "Projeto de desenvolvimento (web ou mobile) do portfólio.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "imageUrl"]
    },
    "BlogPost": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BlogPost",
      "type": "object",
      "description": "Artigo técnico ou insight publicado no blog.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "excerpt": { "type": "string" },
        "content": { "type": "string" },
        "coverUrl": { "type": "string", "format": "uri" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "published": { "boolean": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "content", "published"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}/userProfile": {
      "schema": "UserProfile",
      "description": "Documento único com o perfil do usuário."
    },
    "/users/{userId}/projects/{projectId}": {
      "schema": "Project",
      "description": "Coleção de projetos do desenvolvedor."
    },
    "/users/{userId}/blogPosts/{postId}": {
      "schema": "BlogPost",
      "description": "Coleção de artigos do blog."
    }
  }
}
