
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Verifica se é o dono do portfólio (substitua pelo seu UID após o login)
    function isOwner(userId) {
      return request.auth != null && (request.auth.uid == userId || userId == 'main-dev');
    }

    // Perfil do Usuário
    match /users/{userId}/userProfile/{profileId} {
      allow read: if true; // Público pode ver o perfil
      allow write: if isOwner(userId);
    }

    // Projetos
    match /users/{userId}/projects/{projectId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Blog Posts
    match /users/{userId}/blogPosts/{postId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
